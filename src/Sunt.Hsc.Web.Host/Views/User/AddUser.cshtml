
@model Sunt.Hsc.Application.RegisterInput
@{
	ViewBag.Title = "添加用户";
}

<h2>@ViewBag.Title</h2>

<form method="post">
	<div class="form-group row">
		<label asp-for="Name" class="col-sm-2"></label>
		<div class="col-sm-10">
			<input class="form-control" asp-for="Name">
			<span class="invalid" asp-validation-for="Name"></span>
		</div>
	</div>

	<div class="form-group row">
		<label asp-for="EmailAddress" class="col-sm-2"></label>
		<div class="col-sm-10">
			<input class="form-control" asp-for="EmailAddress">
			<span class="invalid" asp-validation-for="EmailAddress"></span>
		</div>
	</div>

	<div class="form-group row">
		<label asp-for="Phone" class="col-sm-2"></label>
		<div class="col-sm-10">
			<input class="form-control" asp-for="Phone">
			<span class="invalid" asp-validation-for="Phone"></span>
		</div>
	</div>

	<div class="form-group row">
		<label asp-for="UserName" class="col-sm-2"></label>
		<div class="col-sm-10">
			<input class="form-control" asp-for="UserName">
			<span class="invalid" asp-validation-for="UserName"></span>
		</div>
	</div>

	<div class="form-group row">
		<label asp-for="Password" class="col-sm-2"></label>
		<div class="col-sm-10">
			<input class="form-control" asp-for="Password">
			<span class="invalid" asp-validation-for="Password"></span>
		</div>
	</div>

	<div class="invalid" asp-validation-summary="ModelOnly">
	</div>

	<button type="submit" class="btn btn-primary">提交</button>
	<a asp-action="Index" class="btn btn-secondary">返回列表</a>
</form>